                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#5285ea"
                android:layout_centerHorizontal="true"
                android:text="DISPOSAL "/>

            <!-- Disposal: Excavated Material Off-site -->
            <TextView
                android:id="@+id/excavated_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="#e9252424"
                android:layout_below="@id/disposal_head"
                android:paddingLeft="16dp"
                android:textStyle="bold"
                android:text="A. Excavated Material (Off-site)"
                android:layout_marginBottom="5dp"/>

            <!--Volume Disposal-->
            <EditText
                android:id="@+id/et_emVolume"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/excavated_material"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:background="@drawable/reounded_edittext"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_centerHorizontal="true"
                android:inputType="number"
                android:hint="Volume"
                android:layout_marginBottom="5dp"/>

            <!-- em - Rate-->
