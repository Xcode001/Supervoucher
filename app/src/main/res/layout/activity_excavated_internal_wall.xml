                android:layout_marginBottom="5dp"/>

            <!-- Reinforcement of Instu Concrete : Bar size rate-->

            <EditText
                android:id="@+id/et_reinforcementbarsize_rate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
