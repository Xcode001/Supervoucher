<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.geekbounty.engineeringinvoice.ExcavatedInternalWallActivity">

    <RelativeLayout
        android:id="@+id/topsoil"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Excavation and Filling Title-->
        <TextView
            android:id="@+id/section1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#5285ea"
            android:layout_centerHorizontal="true"
            android:text="D20 Excavating and Filling "/>

        <!-- Topsoil for Preservation-->
        <TextView
            android:id="@+id/section1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/section1"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#e9252424"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:text="A. Top Soil for Preservation"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
        <!-- Topsoil for Preservation length -->
        <EditText
            android:id="@+id/topsoil_length_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_below="@id/section1.1"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:background="@drawable/reounded_edittext"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:hint="Length"
            android:layout_marginBottom="20dp"/>

        <!-- Topsoil for Preservation Width -->
        <EditText
            android:id="@+id/topsoil_width_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/topsoil_length_et"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:hint="Width"
            android:background="@drawable/reounded_edittext"
            android:inputType="number"
            android:paddingLeft="16dp"
            android:textSize="16sp" />
        z


        <!-- Topsoil for Preservation rate-->
        <EditText
            android:id="@+id/topsoil_rate_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/topsoil_width_et"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_marginRight="45dp"
            android:background="@drawable/reounded_edittext"
            android:paddingLeft="10dp"
            android:layout_marginLeft="45dp"
            android:inputType="number"
            android:hint="Rate"
            android:layout_marginBottom="5dp"/>

        <!-- Top soil for preservation desc-->


        <!-- Trenches -->
        <RelativeLayout
            android:id="@+id/trench"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topsoil_rate_et">

            <!-- Trench Title-->
            <TextView
                android:id="@+id/section2.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#e9252424"
                android:paddingLeft="16dp"
                android:textStyle="bold"
                android:text="B. Trenches"
                android:layout_marginBottom="5dp"/>

            <!--Trench Length -->
            <EditText
                android:id="@+id/trench_length_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/section2.1"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:background="@drawable/reounded_edittext"
                android:paddingLeft="16dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:inputType="number"
                android:hint="Length"
                android:layout_marginBottom="5dp"/>

            <!-- Trench Width-->
            <EditText
                android:id="@+id/trench_width_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/reounded_edittext"
                android:layout_below="@+id/trench_length_et"
                android:hint="Width"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:paddingLeft="16dp"
                android:textSize="16sp" />

            <!-- Trench Depth-->
            <EditText
                android:id="@+id/trench_depth_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/trench_width_et"
                android:hint="Depth"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/reounded_edittext"
                android:inputType="number"
                android:paddingLeft="16dp"
                android:textSize="16sp" />

            <!-- Trench Rate-->
            <EditText
                android:id="@+id/trench_rate_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/trench_depth_et"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:background="@drawable/reounded_edittext"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_centerHorizontal="true"
                android:inputType="number"
                android:hint="Rate"
                android:layout_marginBottom="5dp"/>



        </RelativeLayout>
        <!-- end Trench -->

        <!-- Disposal-->
